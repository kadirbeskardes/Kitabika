@model BookStore.Service.DTOs.UserDto
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["UserProfile"];
}

<style>
    h2 {
        color: var(--primary-hover);
        font-weight: 700;
        margin-bottom: 30px;
        padding-bottom: 10px;
        border-bottom: 2px solid var(--light-border);
    }

    h4 {
        color: var(--primary-hover);
        font-weight: 600;
        margin-bottom: 20px;
        padding-bottom: 8px;
        border-bottom: 1px solid var(--light-border);
    }

    .profile-card {
        background-color: var(--card-bg);
        border-radius: 12px;
        padding: 30px;
        box-shadow: 0 5px 20px var(--shadow);
        margin-top: 20px;
    }

    .profile-info p {
        font-size: 1.1rem;
        margin-bottom: 15px;
    }

    .profile-info strong {
        color: var(--primary);
        min-width: 150px;
        display: inline-block;
    }

    .btn-back {
        background-color: var(--muted);
        border-color: var(--muted);
        font-weight: 600;
        padding: 10px 25px;
        border-radius: 5px;
        transition: all 0.3s;
        color: #fff;
    }

    .btn-back:hover {
        background-color: var(--text-muted);
        border-color: var(--text-muted);
        transform: translateY(-2px);
        color: #fff;
    }

    .icon {
        color: var(--primary);
        margin-right: 8px;
    }
</style>

<div class="container">
    <h2><i class="fas fa-user-circle icon"></i>@Localizer["UserProfile"]</h2>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="profile-card">
                <h4><i class="fas fa-id-badge icon"></i>@Localizer["GeneralInformation"]</h4>
                <div class="profile-info">
                    <p><strong><i class="fas fa-user icon"></i>@Localizer["Username"]:</strong> @Model.Username</p>
                    <p><strong><i class="fas fa-envelope icon"></i>@Localizer["Email"]:</strong> @Model.Email</p>
                    <p><strong><i class="fas fa-user-shield icon"></i>@Localizer["Role"]:</strong> @Model.Role</p>
                </div>
            </div>

            <div class="text-right mt-4">
                <a asp-action="Index" asp-controller="Home" class="btn btn-back">
                    <i class="fas fa-arrow-left mr-2"></i>@Localizer["BacktoHome"]
                </a>
            </div>
        </div>
    </div>
</div>

<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
