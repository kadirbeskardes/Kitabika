@model BookStore.Service.DTOs.UserDto
@{
    ViewData["Title"] = "Kullanıcı Profili";
}

<style>
    :root {
        --primary-color: #FF8C00;
        --primary-dark: #E67E00;
        --primary-light: #FFA726;
        --light-bg: #FFF3E0;
    }

    h2 {
        color: var(--primary-dark);
        font-weight: 700;
        margin-bottom: 30px;
        padding-bottom: 10px;
        border-bottom: 2px solid var(--light-bg);
    }

    h4 {
        color: var(--primary-dark);
        font-weight: 600;
        margin-bottom: 20px;
        padding-bottom: 8px;
        border-bottom: 1px solid #FFE0B2;
    }

    .profile-card {
        background-color: white;
        border-radius: 12px;
        padding: 30px;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.05);
        margin-top: 20px;
    }

    .profile-info p {
        font-size: 1.1rem;
        margin-bottom: 15px;
    }

    .profile-info strong {
        color: var(--primary-dark);
        min-width: 150px;
        display: inline-block;
    }

    .btn-back {
        background-color: #95a5a6;
        border-color: #95a5a6;
        font-weight: 600;
        padding: 10px 25px;
        border-radius: 5px;
        transition: all 0.3s;
    }

        .btn-back:hover {
            background-color: #7f8c8d;
            border-color: #7f8c8d;
            transform: translateY(-2px);
        }

    .icon {
        color: var(--primary-color);
        margin-right: 8px;
    }
</style>

<div class="container">
    <h2><i class="fas fa-user-circle icon"></i>Kullanıcı Profili</h2>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="profile-card">
                <h4><i class="fas fa-id-badge icon"></i>Genel Bilgiler</h4>
                <div class="profile-info">
                    <p><strong><i class="fas fa-user icon"></i>Kullanıcı Adı:</strong> @Model.Username</p>
                    <p><strong><i class="fas fa-envelope icon"></i>E-posta:</strong> @Model.Email</p>
                    <p><strong><i class="fas fa-user-shield icon"></i>Rol:</strong> @Model.Role</p>
                </div>
            </div>

            <div class="text-right mt-4">
                <a asp-action="Index" asp-controller="Home" class="btn btn-back">
                    <i class="fas fa-arrow-left mr-2"></i>Anasayfaya Dön
                </a>
            </div>
        </div>
    </div>
</div>

<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
