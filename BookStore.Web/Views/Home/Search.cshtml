@model IEnumerable<BookStore.Service.DTOs.BookDto>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["SearchResults"];
}

<h2>@Localizer["Search results for"] "@ViewContext.HttpContext.Request.Query["searchTerm"]"</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">@Localizer["No books found matching your search criteria."]</div>
}
else
{
    <div class="row">
        @foreach (var book in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <img src="@book.CoverImageUrl" class="card-img-top cover-img cover-200" alt="@book.Title">
                    <div class="card-body">
                        <h5 class="card-title">@book.Title</h5>
                        <p class="card-text">@book.Author</p>
                        <p class="card-text">@book.Price.ToString("C")</p>
                        <p class="card-text"><small class="text-muted">@book.CategoryName</small></p>
                    </div>
                    <div class="card-footer">
                        <a asp-action="Details" asp-route-id="@book.Id" class="btn btn-primary">@Localizer["Details"]</a>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <form asp-controller="Cart" asp-action="AddToCart" method="post" class="d-inline">
                                <input type="hidden" name="bookId" value="@book.Id" />
                                <button type="submit" class="btn btn-success">@Localizer["AddToCart"]</button>
                            </form>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
}
