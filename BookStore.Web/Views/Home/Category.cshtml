@model IEnumerable<BookStore.Service.DTOs.BookDto>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = ViewBag.CategoryName ?? Localizer["Category"];
}

<style>
    .card {
        transition: all 0.3s ease;
        border: none;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 4px 8px var(--shadow);
        background-color: var(--card-bg);
    }

    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px var(--shadow-lg);
    }

    .card-img-top {
        border-bottom: 1px solid var(--border-color);
    }

    .card-title {
        font-weight: 600;
        color: var(--text-primary);
        margin-bottom: 0.75rem;
    }

    .card-text {
        color: var(--text-secondary);
        font-size: 0.9rem;
        margin-bottom: 0.5rem;
    }

    .card-footer {
        background-color: var(--card-bg);
        border-top: 1px solid var(--border-color);
        padding: 1rem;
    }

    .btn-primary {
        background-color: var(--primary);
        border-color: var(--primary);
        color: #fff;
    }

    .btn-primary:hover {
        background-color: var(--primary-hover);
        border-color: var(--primary-hover);
        color: #fff;
    }

    .btn-success {
        background-color: var(--primary-light);
        border-color: var(--primary-light);
        color: #fff;
    }

    .btn-success:hover {
        background-color: var(--primary-hover);
        border-color: var(--primary-hover);
        color: #fff;
    }

    h2 {
        color: var(--primary);
        font-weight: 600;
        margin-bottom: 2rem;
        padding-bottom: 0.5rem;
        border-bottom: 2px solid var(--light-border);
    }

    .row {
        margin-right: -8px;
        margin-left: -8px;
    }

    .col-md-4 {
        padding-right: 8px;
        padding-left: 8px;
    }
</style>

<div class="container">
    <h2><i class="fas fa-bookmark mr-2"></i>@ViewBag.CategoryName</h2>

    <div class="row">
        @foreach (var book in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <img src="@book.CoverImageUrl" class="card-img-top cover-img cover-250" alt="@book.Title" />
                    <div class="card-body">
                        <h5 class="card-title">@book.Title</h5>
                        <p class="card-text"><i class="fas fa-user-edit mr-2 icon-brand"></i>@book.Author</p>
                        <p class="card-text font-weight-bold text-brand-strong" style="font-size: 1.1rem;">@book.Price.ToString("C")</p>
                    </div>
                    <div class="card-footer d-flex justify-content-between">
                        <a asp-action="Details" asp-route-id="@book.Id" class="btn btn-primary">
                            <i class="fas fa-eye mr-1"></i>@Localizer["Details"]
                        </a>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <form asp-controller="Cart" asp-action="AddToCart" method="post" class="d-inline">
                                <input type="hidden" name="bookId" value="@book.Id" />
                                <button type="submit" class="btn btn-success">
                                    <i class="fas fa-cart-plus mr-1"></i>@Localizer["AddToCart"]
                                </button>
                            </form>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>