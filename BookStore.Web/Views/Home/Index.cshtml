@model IEnumerable<BookStore.Service.DTOs.BookDto>
@using Microsoft.Extensions.Localization
@using BookStore.Web.Resources
@inject IStringLocalizer<SharedResource> Localizer

@{
    ViewData["Title"] = Localizer["Home"];
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-lg-3 col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h5 class="mb-0"><i class="fas fa-list mr-2"></i>@Localizer["Categories"]</h5>
                </div>
                <div class="card-body p-0">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item list-group-item-action">
                            <a asp-action="Index" class="text-decoration-none d-block">
                                <i class="fas fa-th-large mr-2"></i>@Localizer["AllCategories"]
                            </a>
                        </li>
                        @foreach (var category in ViewBag.Categories)
                        {
                            <li class="list-group-item list-group-item-action">
                                <a asp-action="Category" asp-route-id="@category.Id" class="text-decoration-none d-block">
                                    <i class="fas fa-bookmark mr-2"></i>@category.Name
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>

        <div class="col-lg-9 col-md-8">
            @if (!Model.Any())
            {
                <div class="alert alert-info text-center py-4">
                    <i class="fas fa-info-circle fa-2x mb-3 icon-brand"></i>
                    <h4>@Localizer["NoBookFoundInCategory"]</h4>
                    <p class="mb-0">@Localizer["DiscoverBooks"]</p>
                </div>
            }
            else
            {
                <div class="row">
                    @foreach (var book in Model)
                    {
                        <div class="col-xl-3 col-lg-4 col-md-6 mb-4">
                            <div class="card h-100 shadow-sm">
                                <div class="position-relative">
                                    <img src="@book.CoverImageUrl" class="card-img-top cover-img cover-250" alt="@book.Title">
                                    <span class="badge position-absolute top-0 end-0 m-2">@book.CategoryName</span>
                                </div>
                                <div class="card-body">
                                    <h5 class="card-title text-truncate" title="@book.Title">@book.Title</h5>
                                    <p class="card-text text-muted"><i class="fas fa-user-edit mr-2"></i>@book.Author</p>
                                    <p class="card-text"><small class="text-muted"><i class="fas fa-calendar mr-1"></i>@book.PublicationYear</small></p>
                                    <h5 class="text-primary">@book.Price.ToString("C")</h5>
                                </div>
                                <div class="card-footer border-0 d-flex justify-content-between">
                                    <a asp-action="Details" asp-route-id="@book.Id" class="btn btn-outline-primary btn-sm">
                                        <i class="fas fa-eye mr-1"></i>@Localizer["ViewDetails"]
                                    </a>
                                    @if (User.Identity.IsAuthenticated)
                                    {
                                        <form asp-controller="Cart" asp-action="AddToCart" method="post" class="d-inline">
                                            <input type="hidden" name="bookId" value="@book.Id" />
                                            <button type="submit" class="btn btn-success btn-sm">
                                                <i class="fas fa-cart-plus mr-1"></i>@Localizer["AddToCart"]
                                            </button>
                                        </form>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>