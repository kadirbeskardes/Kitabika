@model BookStore.Service.DTOs.UserDto
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["MyProfile"];
}

<style>
    .card {
        border: none;
        border-radius: 15px;
        box-shadow: 0 4px 20px var(--shadow);
    }

    .card-header {
        background: linear-gradient(90deg, var(--primary), var(--primary-hover));
        color: #fff;
        border-top-left-radius: 15px;
        border-top-right-radius: 15px;
        padding: 1.5rem;
    }

    .card-header h3 {
        margin: 0;
        font-weight: bold;
        letter-spacing: 1px;
    }

    .card-body {
        background-color: var(--bg-primary);
        padding: 2rem;
        border-bottom-left-radius: 15px;
        border-bottom-right-radius: 15px;
    }

    dt {
        font-weight: 600;
        color: var(--primary);
    }

    .badge-primary {
        background-color: var(--primary-light);
    }

    .badge-danger {
        background-color: var(--danger);
    }

    .btn-primary {
        background-color: var(--primary);
        border: none;
        border-radius: 25px;
        padding: 0.5rem 1.5rem;
        color: #fff;
    }

    .btn-primary:hover {
        background-color: var(--primary-hover);
    }

    .alert-success {
        background-color: var(--warning-bg);
        border-color: var(--warning);
        color: var(--text-primary);
        border-radius: 10px;
    }

    dl.row {
        margin-top: 1rem;
    }

    .text-right {
        margin-top: 2rem;
    }
</style>

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card">
            <div class="card-header">
                <h3>@ViewData["Title"]</h3>
            </div>
            <div class="card-body">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success">
                        @TempData["SuccessMessage"]
                    </div>
                }

                <dl class="row">
                    <dt class="col-sm-3">@Localizer["Username"]</dt>
                    <dd class="col-sm-9">@Model.Username</dd>

                    <dt class="col-sm-3">@Localizer["Email"]</dt>
                    <dd class="col-sm-9">@Model.Email</dd>

                    <dt class="col-sm-3">@Localizer["Role"]</dt>
                    <dd class="col-sm-9">
                        <span class="badge @(Model.Role == "Admin" ? "badge-danger" : "badge-primary")">
                            @Model.Role
                        </span>
                    </dd>
                </dl>

                <div class="text-right">
                    <a asp-action="Edit" class="btn btn-primary">@Localizer["EditProfile"]</a>
                </div>
            </div>
        </div>
    </div>
</div>
