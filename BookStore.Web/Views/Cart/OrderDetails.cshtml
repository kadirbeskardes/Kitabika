@model BookStore.Service.DTOs.OrderDto
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["OrderDetails"];
}

<style>
    :root {
        --primary-color: #FF8C00;
        --primary-dark: #E67E00;
        --primary-light: #FFA726;
        --light-bg: #FFF3E0;
    }

    h2 {
        color: var(--primary-dark);
        font-weight: 700;
        margin-bottom: 30px;
        padding-bottom: 10px;
        border-bottom: 2px solid var(--light-bg);
    }

    h4 {
        color: var(--primary-dark);
        font-weight: 600;
        margin-bottom: 20px;
        padding-bottom: 8px;
        border-bottom: 1px solid var(--light-border);
    }

    .info-card {
        background-color: white;
        border-radius: 10px;
        padding: 20px;
        margin-bottom: 30px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.05);
    }

        .info-card p {
            margin-bottom: 15px;
            font-size: 1.05rem;
        }

    strong {
        color: var(--primary-dark);
        font-weight: 600;
        min-width: 150px;
        display: inline-block;
    }

    .table {
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 0 20px rgba(0,0,0,0.05);
        margin-bottom: 30px;
    }

        .table thead {
            background-color: var(--primary-color);
            color: white;
        }

        .table th {
            border: none;
            font-weight: 600;
            padding: 15px;
        }

        .table td {
            vertical-align: middle;
            padding: 15px;
            border-color: var(--border-color);
        }

    tfoot td {
        font-size: 1.1rem;
        color: var(--primary-dark);
        background-color: var(--light-bg-alt);
    }

    .btn-secondary {
        background-color: var(--muted);
        border-color: var(--muted);
        padding: 10px 25px;
        font-weight: 600;
        border-radius: 5px;
        transition: all 0.3s;
    }

        .btn-secondary:hover { transform: translateY(-2px); }

    .status-badge {
        display: inline-block;
        padding: 5px 10px;
        border-radius: 20px;
        font-weight: 600;
        font-size: 0.9rem;
    }

    .status-processing { background-color: var(--warning-bg); color: var(--primary-dark); }
    .status-completed { background-color: var(--success-bg); color: var(--success-dark); }
    .status-cancelled { background-color: var(--danger-bg); color: var(--danger-dark); }

    .book-icon {
        color: var(--primary-color);
        margin-right: 8px;
    }
</style>

<div class="container">
    <h2><i class="fas fa-receipt mr-2"></i>@Localizer["OrderDetails"] #@Model.Id</h2>

    <div class="row">
        <div class="col-md-6">
            <div class="info-card">
                <h4><i class="fas fa-info-circle mr-2"></i>@Localizer["OrderInformation"]</h4>
                <p><strong><i class="far fa-calendar-alt mr-2"></i>@Localizer["OrderDate:"]</strong> @Model.OrderDate.ToString("g")</p>
                <p>
                    <strong><i class="fas fa-tag mr-2"></i>@Localizer["Status:"]</strong>
                    <span class="status-badge status-@Model.Status.ToString().ToLower()">@Model.Status.ToString()</span>
                </p>
                <p>
                    <strong><i class="fas fa-money-bill-wave mr-2"></i>@Localizer["TotalAmount:"]</strong>
                    <span class="text-brand-strong">@Model.TotalAmount.ToString("C")</span>
                </p>
            </div>
        </div>
        <div class="col-md-6">
            <div class="info-card">
                <h4><i class="fas fa-user mr-2"></i>@Localizer["CustomerInformation"]</h4>
                <p><strong><i class="fas fa-user-tag mr-2"></i>@Localizer["Customer:"]</strong> @Model.Username</p>
            </div>
        </div>
    </div>

    <h4 class="mt-4"><i class="fas fa-list-ul mr-2"></i>@Localizer["OrderItems"]</h4>
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>@Localizer["Book"]</th>
                    <th>@Localizer["Price"]</th>
                    <th>@Localizer["Quantity"]</th>
                    <th>@Localizer["Total"]</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.OrderItems)
                {
                    <tr>
                        <td><i class="fas fa-book book-icon"></i>@item.BookTitle</td>
                        <td>@item.UnitPrice.ToString("C")</td>
                        <td>@item.Quantity</td>
                        <td>@((item.UnitPrice * item.Quantity).ToString("C"))</td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="3" class="text-right"><strong>@Localizer["Total:"]</strong></td>
                    <td><strong>@Model.TotalAmount.ToString("C")</strong></td>
                </tr>
            </tfoot>
        </table>
    </div>

    <div class="text-right">
        <a asp-action="OrderHistory" class="btn btn-secondary">
            <i class="fas fa-arrow-left mr-2"></i>@Localizer["BackToOrderHistory"]
        </a>
    </div>
</div>

<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>