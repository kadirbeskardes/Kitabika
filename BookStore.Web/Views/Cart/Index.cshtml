@model BookStore.Web.Helpers.Cart
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["ShoppingCart"];
}

<style>
    :root {
        --primary-color: #FF8C00;
        --primary-dark: #E67E00;
        --primary-light: #FFA726;
        --light-bg: #FFF3E0;
    }

    h2 {
        color: var(--primary-dark);
        font-weight: 700;
        margin-bottom: 30px;
        padding-bottom: 15px;
        border-bottom: 2px solid var(--light-bg);
    }

    .alert-info {
        background-color: var(--light-bg);
        border-color: #FFE0B2;
        color: var(--primary-dark);
    }

        .alert-info a {
            color: var(--primary-dark);
            font-weight: 600;
            text-decoration: none;
        }

            .alert-info a:hover {
                text-decoration: underline;
            }

    .table {
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 0 20px rgba(0,0,0,0.05);
    }

        .table thead {
            background-color: var(--primary-color);
            color: white;
        }

        .table th {
            border: none;
            font-weight: 600;
            padding: 15px;
        }

        .table td {
            vertical-align: middle;
            padding: 15px;
            border-color: #f0f0f0;
        }

    .btn-primary {
        background-color: var(--primary-color);
        border-color: var(--primary-color);
    }

        .btn-primary:hover {
            background-color: var(--primary-dark);
            border-color: var(--primary-dark);
        }

    .btn-danger {
        background-color: #e74c3c;
        border-color: #e74c3c;
    }

    .btn-secondary {
        background-color: #95a5a6;
        border-color: #95a5a6;
    }

    .form-control {
        border: 1px solid #FFE0B2;
    }

        .form-control:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 0.2rem rgba(255, 140, 0, 0.15);
        }

    tfoot td {
        font-size: 1.1rem;
        color: var(--primary-dark);
        background-color: var(--light-bg);
    }

    .cart-actions {
        margin-top: 30px;
    }

        .cart-actions .btn {
            padding: 10px 25px;
            font-weight: 600;
            margin-left: 10px;
        }

    .quantity-form {
        display: flex;
        align-items: center;
    }

        .quantity-form .form-control {
            width: 80px;
            text-align: center;
        }

        .quantity-form .btn {
            padding: 5px 10px;
            margin-left: 10px;
        }

    .coupon-section {
        margin-bottom: 20px;
    }

    .coupon-applied {
        color: #28a745;
        font-weight: 600;
    }

    .summary-section {
        background-color: var(--light-bg);
        padding: 20px;
        border-radius: 10px;
        margin-top: 20px;
    }
</style>

<div class="container">
    <h2><i class="fas fa-shopping-cart mr-2"></i>@Localizer["ShoppingCart"]</h2>

    @if (!Model.Items.Any())
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle mr-2"></i>@Localizer["Your cart is empty."] <a asp-controller="Home" asp-action="Index">@Localizer["Continue shopping"]</a>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>@Localizer["Book"]</th>
                        <th>@Localizer["Price"]</th>
                        <th>@Localizer["Quantity"]</th>
                        <th>@Localizer["Total"]</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td><i class="fas fa-book mr-2 icon-brand"></i>@item.BookTitle</td>
                            <td>@item.UnitPrice.ToString("C")</td>
                            <td>
                                <form asp-action="UpdateCart" method="post" class="quantity-form">
                                    <input type="hidden" name="bookId" value="@item.BookId" />
                                    <input type="number" name="quantity" value="@item.Quantity" min="1" class="form-control form-control-sm" />
                                    <button type="submit" class="btn btn-sm btn-primary">@Localizer["Update"]</button>
                                </form>
                            </td>
                            <td>@item.TotalPrice.ToString("C")</td>
                            <td>
                                <form asp-action="RemoveFromCart" method="post">
                                    <input type="hidden" name="bookId" value="@item.BookId" />
                                    <button type="submit" class="btn btn-sm btn-danger">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="row">
            <div class="col-md-6 coupon-section">
                <form asp-action="ApplyCoupon" method="post" class="form-inline">
                    <div class="input-group w-100">
                        <input type="text" name="Code" class="form-control" placeholder="@Localizer["Enter coupon code"]" />
                        <div class="input-group-append">
                            <button type="submit" class="btn btn-primary">@Localizer["ApplyCoupon"]</button>
                        </div>
                    </div>
                </form>

                @if (!string.IsNullOrEmpty(Model.CouponCode))
                {
                    <div class="mt-2">
                        <span class="coupon-applied">"@Model.CouponCode" @Localizer["coupon applied"]</span>
                        <form asp-action="RemoveCoupon" method="post" class="d-inline">
                            <button type="submit" class="btn btn-sm btn-link text-danger">@Localizer["Remove"]</button>
                        </form>
                    </div>
                }
            </div>

            <div class="col-md-6 summary-section">
                <div class="text-right">
                    <h5>@Localizer["Subtotal:"] @Model.Items.Sum(i => i.TotalPrice).ToString("C")</h5>
                    @if (Model.CouponDiscount > 0)
                    {
                        <h5 class="text-danger">@Localizer["Discount:"] -@Model.CouponDiscount.ToString("C")</h5>
                    }
                    <h4>@Localizer["GrandTotal:"] @Model.TotalPrice.ToString("C")</h4>
                </div>
            </div>
        </div>

        <div class="text-right cart-actions">
            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left mr-2"></i>@Localizer["ContinueShopping"]
            </a>
            <a asp-action="Checkout" class="btn btn-primary">
                <i class="fas fa-credit-card mr-2"></i>@Localizer["ProceedToCheckout"]
            </a>
        </div>
    }
</div>

<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>