@model BookStore.Service.DTOs.ReturnLoanDto
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["ReturnBook"];
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Return" method="post">
    <div class="form-group">
        <label asp-for="Condition" class="control-label">@Localizer["BookCondition"]</label>
        <select asp-for="Condition" class="form-control">
            <option value="Good">@Localizer["Good - No issues"]</option>
            <option value="Damaged">@Localizer["Damaged - Minor issues"]</option>
            <option value="Lost">@Localizer["Lost - Cannot be returned"]</option>
        </select>
        <span asp-validation-for="Condition" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Notes" class="control-label">@Localizer["Notes"]</label>
        <textarea asp-for="Notes" class="form-control"></textarea>
        <span asp-validation-for="Notes" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">@Localizer["ConfirmReturn"]</button>
        <a asp-action="MyLoans" class="btn btn-secondary">@Localizer["Cancel"]</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
