@model IEnumerable<BookStore.Service.DTOs.LoanDto>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["MyLoans"];
}

<h2>@ViewData["Title"]</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">@Localizer["You have no active loans."]</div>
}
else
{
    <div class="table-responsive">
        <table class="table table-bordered">
            <thead class="thead-light">
                <tr>
                    <th>@Localizer["Book"]</th>
                    <th>@Localizer["LoanDate"]</th>
                    <th>@Localizer["DueDate"]</th>
                    <th>@Localizer["Status"]</th>
                    <th>@Localizer["Actions"]</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var loan in Model)
                {
                    <tr class="@(loan.IsOverdue ? "table-danger" : "")">
                        <td>
                            <div class="d-flex align-items-center">
                                <img src="@loan.BookCoverImage" alt="@loan.BookTitle" class="mr-3 cover-img" style="width:50px;height:70px;">
                                <div>@loan.BookTitle</div>
                            </div>
                        </td>
                        <td>@loan.LoanDate.ToString("d")</td>
                        <td>@loan.DueDate.ToString("d")</td>
                        <td>
                            @if (loan.IsOverdue)
                            {
                                <span class="badge badge-danger">@Localizer["Overdue"]</span>
                            }
                            else
                            {
                                <span class="badge badge-success">@Localizer["Active"]</span>
                            }
                        </td>
                        <td>
                            <a asp-action="Return" asp-route-id="@loan.Id" class="btn btn-sm btn-primary">@Localizer["Return"]</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
