@model bool

@if (Model)
{
    <form asp-controller="Loan" asp-action="Borrow" method="post">
        <input type="hidden" name="bookId" value="@ViewBag.BookId" />
        <div class="form-group">
            <label for="loanDays">Ödünç Süresi (gün):</label>
            <select name="loanDays" class="form-control w-auto d-inline-block">
                <option value="7">7 gün</option>
                <option value="14" selected>14 gün</option>
                <option value="21">21 gün</option>
                <option value="30">30 gün</option>
            </select>
        </div>
        <button type="submit" class="btn btn-success">Bu Kitabı Ödünç Al</button>
    </form>
}
else
{
    <div class="alert alert-warning">
        Bu kitap şu anda ödünç verilmiş. Lütfen daha sonra tekrar deneyin.
    </div>
}
