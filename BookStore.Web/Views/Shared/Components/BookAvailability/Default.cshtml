@model bool
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@if (Model)
{
    <form asp-controller="Loan" asp-action="Borrow" method="post">
        <input type="hidden" name="bookId" value="@ViewBag.BookId" />
        <div class="form-group">
            <label for="loanDays">@Localizer["Loan Period (days):"]</label>
            <select name="loanDays" class="form-control w-auto d-inline-block">
                <option value="7">@Localizer["7 days"]</option>
                <option value="14" selected>@Localizer["14 days"]</option>
                <option value="21">@Localizer["21 days"]</option>
                <option value="30">@Localizer["30 days"]</option>
            </select>
        </div>
        <button type="submit" class="btn btn-success">@Localizer["Borrow This Book"]</button>
    </form>
}
else
{
    <div class="alert alert-warning">
        @Localizer["This book is currently on loan. Please try again later."]
    </div>
}
