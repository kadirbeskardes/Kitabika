@model IEnumerable<BookStore.Service.DTOs.ReviewDto>

<style>
    :root {
        --primary-color: #FF8C00;
        --primary-dark: #E67E00;
        --primary-light: #FFA726;
        --light-bg: #FFF3E0;
    }

    .reviews-container {
        margin: 20px 0;
    }

    .alert-info {
        background-color: var(--light-bg);
        border-color: #FFE0B2;
        color: var(--primary-dark);
        padding: 15px;
        border-radius: 8px;
    }

    .card {
        border: none;
        border-radius: 10px;
        box-shadow: 0 4px 12px rgba(255, 140, 0, 0.1);
        transition: transform 0.3s ease;
    }

    .card:hover {
        transform: translateY(-5px);
    }

    .card-body {
        padding: 20px;
    }

    .card-title {
        color: var(--primary-dark);
        font-weight: 600;
        margin-bottom: 0;
    }

    .card-subtitle {
        font-size: 0.85rem;
        color: #95a5a6 !important;
    }

    .card-text {
        color: #555;
        margin-top: 10px;
    }

    .rating {
        color: var(--primary-color);
    }

    .bi-star-fill {
        color: var(--primary-color) !important;
    }

    .btn-outline-primary {
        color: var(--primary-color);
        border-color: var(--primary-color);
        border-radius: 20px;
        padding: 8px 20px;
        font-weight: 500;
        transition: all 0.3s;
    }

    .btn-outline-primary:hover {
        background-color: var(--primary-color);
        color: white;
    }

    .review-divider {
        border-top: 1px solid #FFE0B2;
        margin: 15px 0;
    }
</style>

@if (!Model.Any())
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle-fill mr-2"></i>Henüz inceleme yapılmamış. İlk incelemeyi yapan siz olun!
    </div>
}
else
{
    <div class="reviews-container">
        @foreach (var review in Model.Take(3))
        {
            <div class="card mb-3">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="card-title">@review.Title</h5>
                        <div class="rating">
                            @for (int i = 1; i <= 5; i++)
                            {
                                <i class="bi @(i <= review.Rating ? "bi-star-fill" : "bi-star")"></i>
                            }
                        </div>
                    </div>
                    <h6 class="card-subtitle mb-2">
                        <i class="bi bi-person-circle mr-1"></i>@review.UserDisplayName 
                        <i class="bi bi-calendar ml-2 mr-1"></i>@review.ReviewDate.ToString("d")
                    </h6>
                    <div class="review-divider"></div>
                    <p class="card-text">@review.Content</p>
                </div>
            </div>
        }
    </div>

    @if (Model.Count() > 3)
    {
        <div class="text-center mt-3">
            <a asp-controller="Reviews" asp-action="BookReviews" asp-route-bookId="@Model.First().BookId"
               class="btn btn-outline-primary">
                <i class="bi bi-list-ul mr-2"></i>Tüm Yorumları Görüntüle (@Model.Count())
            </a>
        </div>
    }
}
