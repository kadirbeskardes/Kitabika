@using Microsoft.Extensions.Localization
@using BookStore.Web.Resources
@inject IStringLocalizer<SharedResource> Localizer

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Kitabika</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/theme.css" />

    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            margin: 0;
            background: var(--bg-primary);
            color: var(--text-primary);
        }

        .navbar {
            box-shadow: 0 4px 12px var(--shadow);
            padding-top: 0.8rem;
            padding-bottom: 0.8rem;
            background: var(--navbar-bg);
        }

        .navbar-brand {
            font-size: 1.8rem;
            font-weight: bold;
            color: var(--primary) !important;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .navbar-brand i { font-size: 1.6rem; }

        .nav-link {
            color: var(--nav-text) !important;
            font-weight: 500;
            transition: all 0.2s ease;
            padding: 0.6rem 1rem;
            border-radius: 6px;
        }

        .nav-link:hover, .nav-link:focus {
            background-color: var(--light-bg);
            color: var(--primary-hover) !important;
        }

        .form-control { border-radius: 8px; border: 1px solid var(--input-border); transition: 0.2s; background: var(--input-bg); color: var(--text-primary); }
        .form-control:focus { border-color: var(--primary); box-shadow: 0 0 0 0.25rem rgba(255, 140, 0, 0.12); }

        .btn-outline-warning { border-radius: 8px; transition: 0.3s ease; }
        .btn-outline-warning:hover { background-color: var(--primary-hover); color: white; }

        .user-avatar {
            width: 38px; height: 38px; border-radius: 50%; background: linear-gradient(135deg, var(--primary), var(--primary-hover)); color: white; display:flex;align-items:center;justify-content:center;font-weight:bold;font-size:1rem; box-shadow: 0 2px 5px rgba(0,0,0,0.06);
        }

        .dropdown-menu { border: none; border-radius: 10px; padding: 0.5rem; box-shadow: 0 6px 24px rgba(0,0,0,0.08); animation: fadeIn 0.3s ease-in-out; }
        .dropdown-item { border-radius:6px; padding:0.6rem 1rem; transition:0.2s; }
        .dropdown-item:hover { background-color: var(--accent); color: var(--primary-hover); }

        main { min-height: calc(100vh - 200px); padding:2rem 0; background: linear-gradient(to bottom, var(--bg-primary), var(--bg-secondary)); }

        footer { background-color: var(--footer-bg); padding:2rem 0 1.5rem; text-align:center; font-size:0.95rem; color: var(--text-secondary); border-top: 1px solid var(--light-border); }
        footer a { color: var(--primary-hover); text-decoration:none; }
        footer a:hover { text-decoration:underline; }

    @@keyframes fadeIn { from { opacity:0; transform: translateY(5px); } to { opacity:1; transform: translateY(0); } }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-book-half"></i> Kitabika
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-between" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">@Localizer["Home"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Favorites" asp-action="MostFavorited">@Localizer["MostFavorited"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Privacy">@Localizer["PrivacyPolicy"]</a>
                        </li>
                    </ul>

                    <div class="d-flex mx-3">
                        <form class="d-flex me-2" asp-controller="Home" asp-action="Search" method="get">
                            <input class="form-control me-2" type="search" name="searchTerm" placeholder="@Localizer["SearchPlaceholder"]" />
                            <button class="btn btn-outline-warning" type="submit"><i class="bi bi-search"></i></button>
                        </form>
                        <a class="btn btn-outline-secondary" asp-controller="Home" asp-action="AdvancedSearch" title="@Localizer["AdvancedSearch"]">
                            <i class="bi bi-funnel"></i>
                        </a>
                    </div>

                    <ul class="navbar-nav">
                        <li class="nav-item">
                            @await Html.PartialAsync("_LanguageSwitcher")
                        </li>
                        <li class="nav-item">
                            <button class="nav-link btn btn-link" id="theme-toggle" type="button">
                                <i class="bi bi-sun-fill"></i>
                            </button>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Cart" asp-action="Index">
                                <i class="bi bi-cart"></i> @Localizer["Cart"]
                            </a>
                        </li>

                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="userMenu" role="button" data-bs-toggle="dropdown">
                                    <div class="user-avatar me-2">@User.Identity.Name.Substring(0, 1).ToUpper()</div>
                                    <span class="d-none d-md-inline">@User.Identity.Name</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userMenu">
                                    <li><a class="dropdown-item" asp-controller="Profile" asp-action="Index"><i class="bi bi-person me-2"></i>@Localizer["Profile"]</a></li>
                                    <li><hr class="dropdown-divider" /></li>
                                    <li><a class="dropdown-item" asp-controller="Favorites" asp-action="Index"><i class="bi bi-star me-2"></i>@Localizer["Favorites"]</a></li>
                                    <li><a class="dropdown-item" asp-controller="Wishlist" asp-action="Index"><i class="bi bi-heart me-2"></i>@Localizer["Wishlist"]</a></li>
                                    <li><hr class="dropdown-divider" /></li>
                                    <li><a class="dropdown-item" asp-controller="Cart" asp-action="OrderHistory"><i class="bi bi-bag me-2"></i>@Localizer["Orders"]</a></li>
                                    <li><a class="dropdown-item" asp-controller="Reviews" asp-action="MyReviews"><i class="bi bi-chat-square-text me-2"></i>@Localizer["Reviews"]</a></li>
                                    <li><a class="dropdown-item" asp-controller="Loan" asp-action="MyLoans"><i class="bi bi-arrow-left-right"></i> @Localizer["Loans"]</a></li>

                                    @if (User.IsInRole("Admin"))
                                    {
                                        <li><hr class="dropdown-divider" /></li>
                                        <li><a class="dropdown-item" asp-area="Admin" asp-controller="Home" asp-action="Index"><i class="bi bi-gear me-2"></i>@Localizer["AdminPanel"]</a></li>
                                    }
                                    <li><hr class="dropdown-divider" /></li>
                                    <li><a class="dropdown-item" asp-controller="Account" asp-action="Logout"><i class="bi bi-box-arrow-right me-2"></i>@Localizer["Logout"]</a></li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">@Localizer["Login"]</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Register">@Localizer["Register"]</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="container">
            &copy; 2025 - Kitabika - <a asp-controller="Home" asp-action="Privacy">@Localizer["PrivacyPolicy"]</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/theme.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
