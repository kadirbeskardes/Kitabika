@model BookStore.Service.DTOs.CreateReviewDto
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = $"{Localizer["Write a Review for"]} {ViewBag.BookTitle}";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="BookId" />

    <div class="form-group">
        <label asp-for="Title" class="control-label">@Localizer["Title"]</label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Content" class="control-label">@Localizer["Content"]</label>
        <textarea asp-for="Content" class="form-control" rows="5"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Rating" class="control-label">@Localizer["Rating"]</label>
        <div class="rating-input">
            @for (int i = 1; i <= 5; i++)
            {
                <i class="bi bi-star rating-star" data-value="@i"></i>
            }
            <input type="hidden" asp-for="Rating" id="ratingValue" />
        </div>
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">@Localizer["SubmitReview"]</button>
        <a asp-controller="Home" asp-action="Details" asp-route-id="@Model.BookId" class="btn btn-secondary">@Localizer["Cancel"]</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            $('.rating-star').on('click', function () {
                const value = $(this).data('value');
                $('#ratingValue').val(value);

                $('.rating-star').each(function (index) {
                    if (index < value) {
                        $(this).addClass('bi-star-fill text-warning').removeClass('bi-star');
                    } else {
                        $(this).addClass('bi-star').removeClass('bi-star-fill text-warning');
                    }
                });
            });

            const currentRating = $('#ratingValue').val();
            if (currentRating) {
                $('.rating-star').each(function (index) {
                    if (index < currentRating) {
                        $(this).addClass('bi-star-fill text-warning').removeClass('bi-star');
                    }
                });
            }
        });
    </script>
}
