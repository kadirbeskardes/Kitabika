@model IEnumerable<BookStore.Service.DTOs.ReviewDto>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["MyReviews"];
}

<h2>@ViewData["Title"]</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">@Localizer["You haven't written any reviews yet."]</div>
}
else
{
    <div class="reviews-container">
        @foreach (var review in Model)
        {
            <div class="card mb-3">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <h5 class="card-title">@review.Title</h5>
                        <div class="rating">
                            @for (int i = 1; i <= 5; i++)
                            {
                                <i class="bi @(i <= review.Rating ? "bi-star-fill text-warning" : "bi-star text-secondary")"></i>
                            }
                        </div>
                    </div>
                    <h6 class="card-subtitle mb-2 text-muted">
                        <a asp-controller="Home" asp-action="Details" asp-route-id="@review.BookId">@review.BookTitle</a> @Localizer["for"] @review.ReviewDate.ToString("d") @Localizer["on"]
                    </h6>
                    <p class="card-text">@review.Content</p>

                    <div class="review-actions">
                        <a asp-action="Edit" asp-route-id="@review.Id" class="btn btn-sm btn-outline-primary">@Localizer["Edit"]</a>
                        <form asp-action="Delete" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@review.Id" />
                            <button type="submit" class="btn btn-sm btn-outline-danger">@Localizer["Delete"]</button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
}
