@model IEnumerable<BookStore.Service.DTOs.BookDto>
@{
    ViewData["Title"] = "Kitaplar";
}

<h2>Kitaplar</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Yeni Ekle</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Başlık</th>
            <th>Yazar</th>
            <th>Yayın Yılı</th>
            <th>Fiyat</th>
            <th>Stok</th>
            <th>Kategori</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Author</td>
                <td>@item.PublicationYear</td>
                <td>@item.Price.ToString("C")</td>
                <td>@item.Stock</td>
                <td>@item.CategoryName</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Düzenle</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detay</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

